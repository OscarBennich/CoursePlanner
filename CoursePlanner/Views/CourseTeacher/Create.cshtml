@model CoursePlanner.Models.CourseTeacher

@{
    ViewBag.Title = "Allocate teaching hours";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-4">
            <div class="box box-danger">
                @*<div class="box-header with-border">
                        <h3 class="box-title">Allocate teaching hours</h3>
                    </div>*@
                <div class="box-body">

                    <fieldset>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.CourseOccurrenceId, "Course")
                        </div>
                        <div class="editor-field">

                            @Html.DropDownList("CourseOccurrenceId")
                            @Html.ValidationMessageFor(model => model.CourseOccurrenceId)


                            @*, new { @class = "form-control select2" }

                                <div class="form-group">
                                    <label>Courses</label>
                                    <select class="form-control" style="width: 100%;" multiple>
                                        <option>Alabama</option>
                                        <option>Alaska</option>
                                        <option>California</option>
                                        <option>Delaware</option>
                                        <option>Tennessee</option>
                                        <option>Texas</option>
                                        <option>Washington</option>
                                    </select>

                                </div>*@



                        </div>
                        <br />
                        <div class="editor-label">
                            @Html.LabelFor(model => model.TeacherId, "Teacher")
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("TeacherId")
                            @Html.ValidationMessageFor(model => model.TeacherId)
                        </div>
                        <br />

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Hours)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Hours)
                            @Html.ValidationMessageFor(model => model.Hours)
                        </div>

                        <br />
                        <p>
                            <input type="submit" value="Allocate" class="btn btn-danger btn-info" />
                        </p>
                    </fieldset>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-danger">
                <div class="box-body">
                    <table class="table table-bordered table-hover" id="courseoverview">
                        <thead>
                            <tr>
                                <th>
                                    Course Name
                                </th>
                                <th>
                                    Amount of hours
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CoursePlanner.Models.CourseTeacher c in (List<CoursePlanner.Models.CourseTeacher>)ViewBag.TeacherCourses)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Details/" + @c.CourseOccurrenceId, "CourseOccurrence")"><span>@c.CourseOccurrence.Course.CourseName</span></a>
                                    </td>
                                    <td>
                                        @c.Hours
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-danger">

                <div class="box-body">
                </div>
            </div>
        </div>
    </div>
}
