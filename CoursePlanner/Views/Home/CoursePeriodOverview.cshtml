@using CoursePlanner.Models
@model IEnumerable<CourseModel>

    @{
    ViewBag.Title = "Course overview over terms";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-danger">
                <div class="box-header">
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="courseoverviewtable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="wide-row"></th>
                                <th colspan="4">Fall</th>
                                <th colspan="4">Spring</th>
                            </tr>
                            <tr>
                                <th>Course</th>
                                <th>P1</th>
                                <th>P2</th>
                                <th>P3</th>
                                <th>P4</th>
                                <th>P1</th>
                                <th>P2</th>
                                <th>P3</th>
                                <th>P4</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class='clickable-row' data-href='@Url.Action("Details", "Course", new { id = item.Id })'>
                                <td> @Html.DisplayFor(modelItem => item.CourseName) </td>

                                @if(item.Term == "Fall") { @*&& item.Period.length == 1*@
                                
                                switch(item.Period){
                                case "P1":
                                <td><div class="perioditem normal"></div></td>
                                <td colspan="3"></td>
                                <td colspan="4"></td>
                                break;
                                case "P2":
                                <td></td>
                                <td><div class="perioditem normal"></div></td>
                                <td colspan="2"></td>
                                <td colspan="4"></td>
                                break;
                                default:
                                <td colspan="4"></td>
                                <td colspan="4"></td>
                                break;
                                }

                                }
                                @if(item.Term == "Spring")
                                {
                                <td colspan="4"></td>
                                <td colspan="4"></td>
                                }
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
