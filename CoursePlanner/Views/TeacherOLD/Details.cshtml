                                        <tbody>

                                            <tr>
                                                <td>
                                                    17NIIKA
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Details/7", "Course")"><span>Declarative Problem Solving</span></a>
                                                </td>
                                                <td>
                                                    85
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                        <!--/.col-xs-12-->
                    </div>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="timeline">

                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="settings">

                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="history">

                </div>
