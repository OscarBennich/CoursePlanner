@model IEnumerable<CoursePlanner.Models.Teacher>

@{
    ViewBag.Title = "List of Teachers";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-danger">
            @*<div class="box-header">
                    <h2 class="box-title">Teachers</h2>
                </div>*@
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered table-hover" id="teacherlist">
                    <thead>
                        <tr>
                            <th>
                                Teacher Name
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Contract Type
                            </th>
                            <th>
                                Contract End Date
                            </th>
                            <th>
                               Total Available Hours Fall
                            </th>
                            <th>
                                
                                Allocated Hours Fall
                            </th>
                            <th>
                                Total Available Hours Spring
                            </th>
                            <th>
                                Allocated Hours Spring
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.TeacherName, "Details", new { id = item.TeacherId })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TeacherPosition)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TeacherContractType)
                                </td>

                               @if (item.FixedContractEndDate != null)
                               {
                                <td>
                                    @item.FixedContractEndDate.Value.ToString("yyyy/MM/dd")
                                </td>
                               }
                               else
                               {
                                   <td>No end date set</td>
                               }
                                <td>
                                    AvailableHoursForFall- To be implemented
                                </td>
                                <td>
                                   @ViewBag.TeachingHoursAllocatedFall(Convert.ToInt32(item.TeacherId))
                                </td>
                                <td>
                                    AvailableHoursForSpring -To be implemented
                                </td>
                                <td>
                                    @ViewBag.TeachingHoursAllocatedSpring(Convert.ToInt32(item.TeacherId))
                                </td>
                            </tr>
                        }
                     

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!--/.col-xs-12-->
</div>
<!--/.row-->
@section MyScripts{
    <script>
        $(document).ready(function () {
            $('#teacherlist').DataTable()
        });
    </script>
}