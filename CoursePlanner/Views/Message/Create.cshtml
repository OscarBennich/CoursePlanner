@model CoursePlanner.Models.Message

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Message</legend>

        <div class="editor-label">
            Message Text
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MessageText)
            @Html.ValidationMessageFor(model => model.MessageText)
        </div>
        <br />
        <div class="editor-label">
            Send to 
        </div>
        <div class="editor-field">
            @Html.DropDownList("RecieverID", String.Empty)
            @Html.ValidationMessageFor(model => model.RecieverID)
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.CourseOccurrenceID, "CourseOccurrence") (Optional)
        </div>
        <div class="editor-field">
            @Html.DropDownList("CourseOccurrenceID", String.Empty)
            @Html.ValidationMessageFor(model => model.CourseOccurrenceID)
        </div>
        <p>
            <br />
            <input type="submit" class="btn btn-success btn-sm" value="Send Message" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
