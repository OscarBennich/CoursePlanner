@model CoursePlanner.Models.Message

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Message</legend>

        @Html.HiddenFor(model => model.MessageID)

        <div class="editor-label">
            @Html.LabelFor(model => model.MessageText)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MessageText)
            @Html.ValidationMessageFor(model => model.MessageText)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SenderID, "TeacherSender")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SenderID", String.Empty)
            @Html.ValidationMessageFor(model => model.SenderID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RecieverID, "TeacherReciever")
        </div>
        <div class="editor-field">
            @Html.DropDownList("RecieverID", String.Empty)
            @Html.ValidationMessageFor(model => model.RecieverID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MessageSendDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MessageSendDate)
            @Html.ValidationMessageFor(model => model.MessageSendDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MessageReadDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MessageReadDate)
            @Html.ValidationMessageFor(model => model.MessageReadDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseOccurrenceID, "CourseOccurrence")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CourseOccurrenceID", String.Empty)
            @Html.ValidationMessageFor(model => model.CourseOccurrenceID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ApproveChanges)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ApproveChanges)
            @Html.ValidationMessageFor(model => model.ApproveChanges)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ResponseMessageID, "ResponseToMessage")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ResponseMessageID", String.Empty)
            @Html.ValidationMessageFor(model => model.ResponseMessageID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
